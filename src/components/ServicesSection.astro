---
import coffeeCup from "../assets/coffeCup.webp";
import laptop from "../assets/laptop.webp";
import ServicesCard from "./ServicesCard.astro";

---

<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
      <h2
        class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
      >
        Nuestros Servicios
      </h2>
      <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
        Somos expertos en los siguientes servicios
      </p>
    </div>
    <div class="grid gap-8 md:grid-cols-2">
      <ServicesCard
        title="Creacion y Modificacion de Identidad de Marca"
        serviceImage={coffeeCup}
        alt={"coffee cup image"}
      />
      <ServicesCard
        title="Creacion de Website y aplicaciones web"
        serviceImage={laptop}
        alt={"laptop image"}
      />
    </div>
  </div>
</section>
